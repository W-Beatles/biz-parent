    <dependencyManagement>
        <dependencies>
            <!-- star project start -->
            <dependency>
                <groupId>com.tuhu</groupId>
                <artifactId>tuhu-boot-starter-common</artifactId>
                <version>${tuhu-boot-starter-common.version}</version>
            </dependency>

            <dependency>
                <groupId>com.tuhu</groupId>
                <artifactId>tuhu-boot-starter-dynamic-datasource</artifactId>
                <version>${tuhu-boot-starter-dynamic-datasource.version}</version>
            </dependency>
            <!-- star project end -->

            <!-- 项目版本 start -->
            <dependency>
                <groupId>cn.waynechu</groupId>
                <artifactId>app-web-common</artifactId>
                <version>${app.version}</version>
            </dependency>

            <dependency>
                <groupId>cn.waynechu</groupId>
                <artifactId>app-boot-starter-common</artifactId>
                <version>${app.version}</version>
